{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "swc",
    "typeCheck": true,
    "assets": [
      {
        "include": ".env",
        "outDir": "dist/src"
      },
      { "include": "i18n/**/*", "outDir": "dist/src", "watchAssets": true }
    ],
    "webpack": true
  }
}
